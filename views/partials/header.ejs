<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Criminals</title>
    <link rel="stylesheet" href="/css/styles.css">  <%-- Updated path --%>
</head>
<body>
    <nav>
        <section id="header">
            <a href="/"> <%-- Home link --%>
                <div class="logo-wrapper">
                    <img src="/images/Logo/logo_transparent.png" alt="Criminals" style="height: 40px;width: 150px;">
                </div>
            </a>
            <ul id="navbar">
                <li><a <% if (typeof activePage !== 'undefined' && activePage === 'home') { %>class="active"<% } %> href="/">Home</a></li>
                <li><a <% if (typeof activePage !== 'undefined' && activePage === 'shop') { %>class="active"<% } %> href="/products">Shop</a></li>
                <li><a href="#">Blog</a></li> <%-- Placeholder --%>
                <li><a href="/about">About</a></li>
                <li><a href="#">Contact</a></li> <%-- Placeholder --%>
                <li><a href="/cart"><img src="/images/grocery-store.png" style="height: 30px; width: 30px;" alt="Cart"></a></li>
                <% if (user) { %> <%-- Display these if user is logged in --%>
                    <li><a href="/logout">Logout</a></li>
                    <% if (user.role === 'admin') { %>
                        <li><a href="/admin/dashboard">Admin</a></li> 
                    <% } %>
                <% } else { %> <%-- Display Login if not logged in --%>
                    <li><a href="/login">Login</a></li>
                <% } %>
            </ul>
        </section>
    </nav>
    <%- include('partials/messages') %> <%-- Include messages partial--%>