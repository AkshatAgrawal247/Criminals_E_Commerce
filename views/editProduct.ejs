<%- include('partials/header') %>


<section id="page-header">
    <h2>Edit Product</h2>
</section>

<section>
    <form action="/edit-product/<%= product.id %>" method="POST" enctype="multipart/form-data">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required><br>

        <input type="hidden" name="existingImage" value="<%= product.image %>"> <%-- Hidden field for existing image --%>
        <label for="image">Image:</label>
        <img src="<%= product.image %>" alt="<%= product.name %>" style="max-width: 100px; margin-bottom: 10px;"><br>
        <input type="file" id="image" name="image" accept="image/*"><br>


        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= product.description %></textarea><br>


        <button type="submit">Update Product</button>
    </form>
</section>




<%- include('partials/footer') %>