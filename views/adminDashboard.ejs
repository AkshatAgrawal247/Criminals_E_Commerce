<%- include('partials/header') %>

<section id="page-header">
    <h2>Admin Dashboard</h2>
</section>

<section>
    <h3>Products</h3>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th> <%-- New column for actions --%>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><img src="<%= product.image %>" alt="<%= product.name %>" style="max-width: 50px;"></td>
                    <td><%= product.name %></td>
                    <td>â‚¹<%= product.price %></td>
                    <td>
                        <a href="/edit-product/<%= product.id %>">Edit</a> | <%-- Edit link --%>
                        <form action="/delete-product/<%= product.id %>" method="POST" style="display: inline;"> <%-- Delete form --%>
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button> <%-- Confirmation --%>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/add-product">Add New Product</a> <%-- Add Product link --%>

</section>

<%- include('partials/footer') %>